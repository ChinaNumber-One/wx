.headImg{
 position: fixed;
 bottom: 0;
 width: 100%;
 overflow: visible;
}
.img {
  width: 100%;
  height:440rpx;
}
.submit {
  position: absolute;
  top: 30px;
  left: 60%;
  line-height: 30px;
  padding: 0 20px;
  background: #ff9d00;
  color: #fff;
}
.content {
  position: relative;
}
.place {
  line-height: 30px;
  display: flex;
}
.placeTitle {
  font-size: 16px;
  margin: 0 30px;
  border-bottom: 2px solid #bc0c16;
}
.startCity, .endCity{
  width: 50%;
  text-align: center;
}
.placeName {
  line-height: 30px;
  color: #999;
  margin: 0 30px;
  border: 1px solid #eee;
  border-radius: 5px;
  margin-top: 10px;
}
.icon-wangfan {
  position: absolute;
  top: 62%;
  left: 48%;
}

