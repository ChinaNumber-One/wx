.userinfo {
  display: flex;
  /* flex-direction: column; */
   align-items: center; 
  /* background: #ffbf1c; */
  /* padding: 20px 0;
  min-height: 120px; */
  background-color: #fff;
  margin: 10px 0;
}
.userImgBox{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  /* border-radius: 50%;   */
  position: relative;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
}
.editor {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 10px;
  bottom: 0;
  color: #fff;
  height: 18px;
  background: rgba(0, 0, 0, 0.5)
}
.userinfo-nickname {
  color: #fff;
  font-weight: 600;
  font-size: 16px;
  width: 120px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.loginBtn {
  line-height: 50px;
  padding: 0 20px;
  background: #ffbf1c;
  color: #fff;
  text-align: center;
  width: 100px;
  margin: 50px auto;
  border-radius: 10px;
}
.setting, .feedback, .grade, .contact, .vipcn, .travels, .selection, .safe{
  background: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}
.settingIcon, .iconfont {
  padding: 10px 0;
  margin:0 10px 0 20px;
}
.userId{
  font-size: 10px;
  flex: 1;
  text-align: right;
  margin-right: 20px;
}