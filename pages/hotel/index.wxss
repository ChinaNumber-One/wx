.container {
  display: flex;
  flex-direction: column;
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
}
.headInfo {
  height: 460rpx;
  width: 100%;
  background-color: #2a93ff;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px; 
  border-radius: 10px;
  padding: 0 20px;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.headTitle {
  line-height: 50px;
  font-size: 18px;
  font-weight: 400;
  color: #fff;
}
.cityBox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: #fff;
  text-indent: 1rem;
  border-radius: 4px;
  border-top-left-radius: 10px;
}
.cityName {
  flex: 1;
  font-size: 16px;
  color: #2a93ff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.getPosi{
  display: flex;
  text-align: left;
  margin-right: 50rpx;
  padding-left: 20rpx;
  height:80rpx;
  line-height: 80rpx;
}
.posiTxt {
  text-indent: 6rpx;
}
.posiIcon {
  font-size: 22px;
  text-indent: 0;
}
.timeBox {
  display: flex;
  align-items: center;
  height: 120rpx;
  background-color: #fff;
  margin-top: 20rpx;
  text-indent: 1rem;
  border-radius: 4px;
}
.startTime, .endTime {
  width: 40%;
}
.totalDays{
  width: 30%;
  text-align: center;
}
.timeDate {
  font-size: 18px;
  color: #2a93ff;
}
.toolBar {
  margin-top: 20rpx;
  display: flex;
}
.mapIcon{
  line-height: 80rpx;
  background-color: #fff;
  width: 33%;
  border-radius: 4px;
  text-align: center;
  font-size: 900;
}
.searchBtn{
  height: 80rpx;
  background-color: #f8cb63;
  width: 65%;
  margin-left: 2%;
  text-align: center;
  line-height: 80rpx;
  border-radius: 4px;
}
.icon-ditu::before {
  font-weight: 900!important;
}
.searchBtn{
  font-size: 18px;
  font-weight: 400;
}
.listTitle {
  font-size: 18px;
  line-height: 100rpx;
  margin-left: 20px;
}
.hotelList {
  flex: 1;
}
.swiper {
  height: 100%;
  padding: 0 20px;
}
.itemImg {
  flex:1;
   height: 480rpx; 
  width: 100%; 
  border-radius: 10px;
}
.itemTxt {
  display: flex;
  justify-content: space-between;
  /* margin-top: 20rpx; */
  width: 100%;
}
.itemName {
  line-height: 50rpx;
  font-weight: 600px;
  font-size: 18px;
  width: 60%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.icon-dingwei1::before{
  color: #2a93ff;
  font-size: 24px;
}