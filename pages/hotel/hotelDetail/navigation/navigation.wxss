.container {
  display: flex;
  flex-direction: column;
}
.flex-style{
  display: flex;
  height: 35px;
  z-index: 10;
}
.flex-item{
  height: 35px; 
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}
.flex-item.active{
  color:#0091ff;
}
.map_box{
  flex:1;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box{
  background: #fff;
  min-height: 90px;
  margin-bottom: 20px;
}
.text_box .text{
  margin: 5px;
  color: #999;
  font-size: 12px;
}
.placeName {
  padding: 5px;
  font-size: 18px;
  font-weight: 600px;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.expand {
  height: 4px;
  width: 40px;
  border-radius:2px; 
  background: #999;
  margin: 5px 0;
}
.textBox {
  width: 100%;
}
.expandBox {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
}
.stepTitle {
  line-height: 24px;
  font-size: 16px;
  padding-left: 5px;
}
.stepTitle .title {
  border-left: 6px solid #fbb75b;
  padding-left: 5px;
  line-height: 16px;
}
.stepItem {
  line-height: 20px;
  padding:5px 5px 5px 10px;
  color: #999;
}
.icon {
  font-size: 22px;
  color: #0091ff;
  margin-left: 5px;
}
.time, .walk {
  font-size: 16px;
  color: #000;
  margin: 5px;
}
.walk {
  font-size: 14px;
}
.busName {
  color: #0091ff;
  padding: 0 10px;
  /* border:1px solid #0091ff; */
  border-radius: 10px;
  box-sizing: border-box;
  font-size: 10px;
  margin: 5px;
  margin-bottom: 0px;

}
.cost {
  font-size: 10px;
  color: #000;
}
.arrorDown {
  margin-left: 50px;
  color: #000;
}
.detailBtn {
  padding: 0 10px;
  border-radius: 10px;
  background: #0091ff;
  color: #fff;
  font-size: 12px;
  float: right;
  margin-right: 20px;
}
.busStep {
  font-size: 10px;
}
.black {
  color: #000;
}