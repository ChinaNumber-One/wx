/* pages/destination/viewDetail/viewDetail.wxss */
.container{
  position: static;
}
.swiper{
  height: 175px;
}
.imgBox{
  width: 100%;
  display: inline-block;
  position: relative;
}
.roomImg{
   width: 100%; 
   height: 100%; 
}
.imgNum{
  position: absolute;
  bottom: 30px;
  right: 10px;
  background: rgba(0, 0, 0, .8);
  color: #fff;
  padding: 2px 10px;
}

.viewInfo {
  background: #fff;
  position: absolute;
  width: 100%;
  top: 155px;
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
  padding: 10px 20px;
  box-sizing: border-box;
  border: 1px solid #000;
}
.viewName {
  font-size: 18px;
  font-weight: 600px;
  line-height: 36px;
}
.viewAttention, .viewCoupon {
  font-size: 12px;
  color: #999;
}
.viewSummary {
  text-indent: 2rem;
}
.viewSummary, .viewAddress, .viewCoupon, .viewOpenTime {
  margin-bottom: 20px;
}